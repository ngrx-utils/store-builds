{
  "name": "@ngrx-utils/store",
  "version": "0.6.0",
  "description": "Utilities to help reduce your code boilerplate when working with @ngrx/store",
  "module": "@ngrx-utils/store.es5.js",
  "es2015": "@ngrx-utils/store.js",
  "main": "bundles/store.umd.js",
  "typings": "store.d.ts",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngrx-utils/ngrx-utils.git"
  },
  "keywords": [
    "@ngrx/store",
    "NgRx",
    "Angular",
    "Store",
    "Redux",
    "@ngrx-utils/store"
  ],
  "author": "San Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngrx-utils/ngrx-utils/issues"
  },
  "homepage": "https://github.com/ngrx-utils/ngrx-utils#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "release"
  ],
  "peerDependencies": {
    "@angular/core": "^5.1.3",
    "@ngrx/store": "^5.0.0",
    "rxjs": "^5.5.6"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/../../setupJest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "spec/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/../../node_modules/jest-preset-angular/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "html"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ]
  }
}